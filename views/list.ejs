<%-include('header')-%>

<div class="box">
    <h1 id="heading"><%= listTitle %></h1>
</div>

<div class="box">
    <% for (let i = 0; i < itemsList.length; i++){ %>

        <form action="/delete" method="post">
            <div class="item">
                <input name="checkbox" type="checkbox" value=<%= itemsList[i]._id %> onchange="this.form.submit()" >
                <p><%= itemsList[i].name%></p>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </div>
        </form>
    <% } %>
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="new item" autocomplete="off" autofocus>
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%-include('footer')-%>
